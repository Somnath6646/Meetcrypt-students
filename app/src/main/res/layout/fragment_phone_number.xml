<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.wenull.meetcrypt_students.data.auth.PhoneAuthViewModel" />
    </data>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.fragments.auth.PhoneNumberFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:gravity="center">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_phone_auth_enter"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|bottom"
                        android:text="Enter your phone number"
                        android:layout_margin="15dp"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:text="@={viewModel.phoneNumber}"
                            android:padding="15dp"
                            android:background="@drawable/input_style"
                            android:textColorHint="@color/otp_dash_unfocused"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_margin="10dp"
                            android:textSize="16sp"
                             />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="meetcrypter will send you an OTP to continue. Data charges may apply"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom|center">


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                    <Button
                        android:id="@+id/verify"
                        android:background="@drawable/btn_style"
                        android:textAllCaps="false"
                        android:paddingLeft="70dp"
                        android:paddingRight="70dp"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verify" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:color/transparent"
            />
        </LinearLayout>

</layout>
